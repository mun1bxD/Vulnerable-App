@{
    ViewData["Title"] = "Base64 Encoding";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        
        body {
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            color: #333;
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 900px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .card-body {
            padding: 2rem;
        }

        .display-4 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #fff;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .btn-primary {
            font-size: 1rem;
            font-weight: bold;
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            border: none;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        textarea.form-control,
        pre.form-control {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
        }

        .text-muted a {
            color: #007bff;
            text-decoration: none;
        }

        .text-muted a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="py-5 container">
        <h1 class="display-4 mb-5 text-center">Base64 Encoding</h1>


        <div class="card rounded-lg shadow-lg">
            <div class="card-body">

                <p class="lead mb-4 text-center">Easily encode your text or file into Base64. Just input your text or choose a file, and we’ll handle the rest!</p>

                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="inputText" class="fw-bold">Enter text to encode:</label>
                                <input type="text" id="inputText" name="inputText" class="form-control form-control-lg" placeholder="Enter your text here" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="inputFile" class="fw-bold">Or choose a file to encode:</label>
                                <input type="file" id="inputFile" name="inputFile" class="form-control form-control-lg" />
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Encode Now</button>
                    </div>
                </form>
                @if (ViewBag.EncodedText != null)
                {
                    <div class="mt-4">
                        <h5 class="fw-bold text-center">Encoded Base64 Result:</h5>
                        <textarea class="form-control form-control-lg" readonly rows="6">@ViewBag.EncodedText</textarea>
                    </div>
                }
            </div>
        </div>

        <div class="mt-5 text-center">
            <p class="text-muted">
                Need more info? <a href="https://www.base64encode.org/" target="_blank" class="text-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Learn more about Base64 encoding">Click here</a> for more about Base64 encoding and its uses.
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
